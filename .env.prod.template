# Production Environment Variables Template
# Copy this file to .env.prod and fill in your production values

# Google Cloud and ADK Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/production/credentials.json
GOOGLE_PROJECT_ID=your-production-project-id
GOOGLE_API_KEY=your-production-google-api-key

# OpenRouter API Configuration
OPEN_ROUTER_API_KEY=your-production-openrouter-api-key

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_DEBUG=false

# Environment
ENVIRONMENT=production

# Security Settings
SECRET_KEY=your-super-secret-production-key-here
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database (if needed)
# DATABASE_URL=postgresql://user:password@db:5432/fpa_agents_prod

# Redis (if needed for caching)
# REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn-here
# NEW_RELIC_LICENSE_KEY=your-newrelic-key-here
